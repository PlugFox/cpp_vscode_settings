{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "create build directory",
      "type": "shell",
      "command": "New-Item -ItemType Directory -Path ${workspaceFolder}\\build\\debug, ${workspaceFolder}\\build\\release -Force -ErrorAction SilentlyContinue -OutVariable output | Out-Null",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "clang++ build (debug)",
      "command": "clang++.exe",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-std=c++20",
        "${workspaceFolder}\\*.cpp",
        "-o",
        "${fileDirname}\\build\\debug\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: clang++.exe"
    },
    {
      "type": "shell",
      "label": "clang++ build (release)",
      "command": "clang++.exe",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-std=c++20",
        "${workspaceFolder}\\*.cpp",
        "-o",
        "${fileDirname}\\build\\release\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: clang++.exe"
    },
    {
      "type": "shell",
      "label": "gcc build (debug)",
      "command": "g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++20",
        "${workspaceFolder}\\*.cpp",
        "-o",
        "${fileDirname}\\build\\debug\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: g++.exe"
    }
  ]
}
