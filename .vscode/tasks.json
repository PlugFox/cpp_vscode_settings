{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "create build directory",
      "type": "shell",
      "windows": {
        "command": "New-Item -ItemType Directory -Path ${workspaceFolder}\\build\\debug, ${workspaceFolder}\\build\\release -Force -ErrorAction SilentlyContinue -OutVariable output | Out-Null"
      },
      "linux": {
        "command": "mkdir -p ${workspaceFolder}/build/debug ${workspaceFolder}/build/release > /dev/null 2>&1"
      },
      "osx": {
        "command": "mkdir -p ${workspaceFolder}/build/debug ${workspaceFolder}/build/release"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "clang++ build (debug)",
      "windows": {
        "command": "clang++.exe",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20",
          "${workspaceFolder}\\*.cpp",
          "-o",
          "${fileDirname}\\build\\debug\\${fileBasenameNoExtension}.exe"
        ]
      },
      "linux": {
        "command": "clang++",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20",
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/debug/${fileBasenameNoExtension}"
        ]
      },
      "osx": {
        "command": "clang++",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20",
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/debug/${fileBasenameNoExtension}"
        ]
      },
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: clang++"
    },
    {
      "type": "shell",
      "label": "clang++ build (release)",
      "windows": {
        "command": "clang++.exe",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20", // Sets the C++ language standard to C++20.
          "-O3", // Enables maximum optimization level, which can improve runtime performance but may increase build time.
          "-Wall",
          "-Wextra",
          "-pedantic",
          "-Werror", // Enables all warnings and treats them as errors
          //"-march=native", // Generates code optimized for the native architecture, which can improve performance on the current machine.
          //"-fPIC", // Generates position-independent code, which is necessary for shared library builds.
          //"-shared", // Generates a shared library instead of an executable.
          "${workspaceFolder}\\*.cpp",
          "-o",
          "${fileDirname}\\build\\release\\${fileBasenameNoExtension}.exe"
        ]
      },
      "linux": {
        "command": "clang++",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20", // Sets the C++ language standard to C++20.
          "-O3", // Enables maximum optimization level, which can improve runtime performance but may increase build time.
          "-Wall",
          "-Wextra",
          "-pedantic",
          "-Werror", // Enables all warnings and treats them as errors
          //"-march=native", // Generates code optimized for the native architecture, which can improve performance on the current machine.
          //"-fPIC", // Generates position-independent code, which is necessary for shared library builds.
          //"-shared", // Generates a shared library instead of an executable.
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/release/${fileBasenameNoExtension}"
        ]
      },
      "osx": {
        "command": "clang++",
        "args": [
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-std=c++20", // Sets the C++ language standard to C++20.
          "-O3", // Enables maximum optimization level, which can improve runtime performance but may increase build time.
          "-Wall",
          "-Wextra",
          "-pedantic",
          "-Werror", // Enables all warnings and treats them as errors
          //"-march=native", // Generates code optimized for the native architecture, which can improve performance on the current machine.
          //"-fPIC", // Generates position-independent code, which is necessary for shared library builds.
          //"-shared", // Generates a shared library instead of an executable.
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/release/${fileBasenameNoExtension}"
        ]
      },
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: clang++"
    },
    {
      "type": "shell",
      "label": "gcc build (debug)",
      "command": "g++.exe",
      "windows": {
        "command": "g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "-std=c++20",
          "${workspaceFolder}\\*.cpp",
          "-o",
          "${fileDirname}\\build\\debug\\${fileBasenameNoExtension}.exe"
        ]
      },
      "linux": {
        "command": "g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "-std=c++20",
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/debug/${fileBasenameNoExtension}"
        ]
      },
      "osx": {
        "command": "g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "-std=c++20",
          "${workspaceFolder}/*.cpp",
          "-o",
          "${fileDirname}/build/debug/${fileBasenameNoExtension}"
        ]
      },
      "dependsOn": ["create build directory"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: g++"
    }
  ]
}
