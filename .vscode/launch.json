{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "clang++ (debug)",
      "request": "launch",
      "type": "cppdbg",
      "program": "",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "clang++ build (debug)",
      "windows": {
        "name": "clang++ (debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}.exe",
        "miDebuggerPath": "gdb.exe",
        "miDebuggerArgs": "--interpreter=mi2"
      },
      "linux": {
        "name": "clang++ (debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}",
        "miDebuggerPath": "/usr/bin/gdb",
        "miDebuggerArgs": "--interpreter=mi2"
      },
      "osx": {
        "name": "clang++ (debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}",
        "MIMode": "lldb"
      }
    },
